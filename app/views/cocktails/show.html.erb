<div class="container">
  <div class="row">
    <dif class="col">
      <%= render partial: "show_page", locals: {cocktail: @cocktail} %>
    </dif>
  </div>
</div>

<div class="container show-ingrediens pb-5">
  <div class="row">
    <div class="col">
    <h3>Ingredients:</h3>
     <div class="product-cards">
     <% @cocktail.doses.each do |dose| %>
      <div class="card-product">
        <img src= <%= dose.ingredient.img_url %> />
        <div class="card-product-infos">
          <h2><%= dose.ingredient.name %></h2>
          <p><strong><%= dose.description %></strong></p>
          <%= link_to "Delete", dose_path(dose, @cocktail.id),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm mt-2"%>
        </div>
      </div>
    <% end %>
     </div>
    </div>
  </div>

<div class="d-flex mt-5 p-0">
  <div><%= link_to "Back to list", root_path, class: "btn btn-outline-light"%></div>
  <div class="pl-4"><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-warning"%></div>
  <div class="ml-auto"><%= link_to "Delete cocktail", cocktail_path(@cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" }, class: "btn btn-danger"%></div>
</div>


